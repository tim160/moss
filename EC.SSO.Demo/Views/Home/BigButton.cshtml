@{
  string username = "";
  if ((Model as EC.SSO.Demo.Models.User) != null)
  {
    username = Model.Username;
  }
  ViewBag.Title = "Application selection";
  ViewBag.Logged = true;
  ViewBag.UserName = username;

}

<div class="container align-content-center" style="padding-top: 100px;">
    @Html.ActionLink(
        "Get Link for Test Connect EC",
        "GetLink",
        "Home",
        new
        {
            username = username
        },
        new
        {
            @class = "btn btn-primary btn-block",
            role = "button"
        })
</div>
@{ 
    if(ViewBag.Link != string.Empty && ViewBag.Link != null)
    {
        <div class="container align-content-center" style="padding-top: 100px;">
            <a href="@ViewBag.Link">Connect</a>
        </div>
    }
}

