@{
    ViewBag.Title = "Employee Confidential";
    Layout = "~/Views/Shared/_LayoutECCOM.cshtml";
    bool showDDLanguages = true;
}
<input type="hidden" value="@Url.Action("SeekCompany", "Index")" id="SeekCompanyLocation" />
<div class="general-container login">
    @Html.Partial("Header", showDDLanguages)
    <main class="main">
        <section class="loginSection">
            <input id="selectedLanguage" type="hidden" value="@ViewBag.DEFAULT_LANGUAGE" />
            <div class="loginSection__titleBg">
                <div class="container loginTopSection__container">
                    <div class="loginSection__title">
                        File a report
                    </div><!-- /.loginSection__title -->
                </div><!-- /.container -->
            </div><!-- /.loginSection__titleBg -->
            <div class="loginSection__contentBg">
                <div class="container loginSection__container">
                    <div class="loginContentBlock">
                        <p class="loginContentBlock__textP">
                            This platform makes it easy to report an incident about
                            workplace issues like sexual harassment, unsafe conditions,
                            financial and auditing concerns, theft, bribery, substance
                            abuse etc.
                        </p><!-- /.loginContentBlock__textP -->
                        <p class="loginContentBlock__textP">
                            Find your company below to get started with your report
                            and we’ll ask you a few questions about the incident.
                        </p><!-- /.loginContentBlock__textP -->
                        <a href="@System.Configuration.ConfigurationManager.AppSettings["serviceUrl"]/Service/CheckStatus" class="loginContentBlock__link">
                            Already filed a report?
                        </a>
                    </div><!-- /.loginContentBlock -->
                    <div class="loginTextForm">
                        <label class="loginForm__input">
                            Company name
                            <input id="specialInput" type="text" name="text" required="" autocomplete="off">
                            <input id="companyCode" type="hidden" value="false" />
                        </label>
                        <div class="loginTextFormLinks">
                            <a href="#" id="startBtn" class="btn loginTextFormLinks__startBtn m_t_20">
                                Start
                            </a>
                        </div>
                    </div><!-- /.loginTextForm -->





                </div><!-- /.loginSection__contentBg -->
        </section><!-- /.loginSection -->
    </main><!-- /.main -->
    <!-- ------------------  Footer ---------------- -->
    <footer class="footerBg">
        <div class="container">
            <div class="footer">
                <div></div>
                <div class="footer__copyright">
                    Copyright © 2019 Employee Confidential LLC. All Rights Reserved
                </div><!-- /.footer__copyright -->
                <div class="footer__navLinks">
                    <nav class="footer__navLinks-nav">
                        <li class="footer__navLinks-li">
                            <a href="http://employeeconfidential.com/PrivacyStatement.html" class="footer__navLinks-a">
                                Privacy Policy
                            </a>
                        </li><!-- /.footer__navLinks-li -->
                        <li class="footer__navLinks-li">
                            <a href="http://employeeconfidential.com/TermsOfService.html" class="footer__navLinks-a">
                                Terms of Use
                            </a>
                        </li><!-- /.footer__navLinks-li -->
                    </nav><!-- /.footer__navLinks-nav -->
                </div><!-- /.footer__navLinks -->
            </div><!-- /.footer -->
        </div><!-- /.container -->
    </footer><!-- /.footer -->

</div><!-- /.general-container -->


@section scripts {
    <script src="~/Scripts/View/ServiceReport.js"></script>
    <script src="~/Scripts/View/ServiceHeader.js"></script>
}