@using EC.Models;
@using EC.Models.Database;
@using EC.Localization;
@{

    <link rel="stylesheet" href="~/Content/EmployeeAwareness.css" />
  bool? is_cc = ViewBag.is_cc;
  if (!is_cc.HasValue)
  {
    is_cc = false;
  }
  ViewBag.Title = LocalizationGetter.GetString("EmployeeAwarenessUp", is_cc);
  Layout = "~/Views/Shared/IndexPages/LayoutCasesNewReport.cshtml";

  var um = (UserModel)ViewBag.um;
  var user_id = ViewBag.user_id;
  int company_id = um._user.company_id;

}


<div id="EmployeeAwarenessBlock" class="blockSettings" ng-controller="EmployeeAwarenessPosterController" ng-cloak>
    <div class="mainContent">
        <a id="downloadA" href="" download></a>
        <div class="rightContent">
            <div class="topBlockFilters">
                <a href="@Url.Action("Index", "employeeawareness")" class="toBack">
                    @LocalizationGetter.GetString("BackToResults", is_cc)
                </a>
                <span class="textShot">@LocalizationGetter.GetString("EmployeeAwarenessMaterials", is_cc)</span>
            </div>

            <div class="rezoultItems">

                <div class="mainImg">
                    <img ng-src="{{mainImage}}" />
                </div>
                <div class="rightInfoSelect">
                    <div class="downloadPdf" ng-click="Process()">@string.Format(LocalizationGetter.GetString("DownloadPosterPDF", is_cc), LocalizationGetter.GetString("format_2", is_cc))</div>
                    <div class="availableFormat">
                        <div class="titleFormat">@LocalizationGetter.GetString("AvailableFormat", is_cc): </div>
                        <div class="blockFormat">
                            <div class="titleBlockFormat active">@LocalizationGetter.GetString("Poster", is_cc)</div>
